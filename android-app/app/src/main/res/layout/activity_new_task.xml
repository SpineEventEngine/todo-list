<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.spine.examples.todolist.newtask.NewTaskActivity">

    <include layout="@layout/toolbar" android:id="@+id/include"/>

    <Button
            android:text="@string/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_task_btn"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/std_padding"
            android:layout_marginEnd="@dimen/std_padding"/>
    <TextView
            android:text="@string/create_new_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_task_label"
            android:labelFor="@+id/new_task_description"
            android:textSize="@dimen/heading_text_size"
            app:layout_constraintTop_toTopOf="@+id/include"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/std_padding"
            android:layout_marginStart="@dimen/std_padding"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/new_task_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_task_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/std_padding"
            android:layout_marginStart="@dimen/std_padding"
            android:layout_marginEnd="@dimen/std_padding"/>
    <Button
            android:text="@string/back"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/std_padding"
            android:layout_marginBottom="@dimen/std_padding"/>
</android.support.constraint.ConstraintLayout>
