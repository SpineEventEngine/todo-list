<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/min_clickable_size"
        android:minWidth="@dimen/min_item_width"
        android:background="@drawable/selectable_list_item_background">

    <View
            android:id="@+id/label_color_stripe"
            android:layout_width="@dimen/color_view_size"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

    <TextView
            android:id="@+id/label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/std_padding"/>

</RelativeLayout>
