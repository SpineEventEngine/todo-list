<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/std_padding"
             android:layout_marginEnd="@dimen/std_padding"
             android:layout_marginTop="@dimen/half_padding"
             android:layout_marginBottom="@dimen/half_padding">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:minHeight="@dimen/min_item_height">
        <View
                android:id="@+id/task_label_color_stripe"
                android:layout_alignParentStart="true"
                android:layout_width="@dimen/std_padding"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/task_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:id="@+id/task_due_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/task_due_date"
                android:layout_alignParentBottom="true"
                android:text="@string/due"
                android:layout_marginEnd="@dimen/divider_size"
                android:layout_marginBottom="@dimen/std_padding"
                android:textSize="@dimen/small_text"/>
        <TextView
                android:id="@+id/task_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/std_padding"
                android:layout_marginBottom="@dimen/std_padding"/>
    </RelativeLayout>
</FrameLayout>
